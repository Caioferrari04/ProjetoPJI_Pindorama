@page
@model RegisterDevPfModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/cadastro.css"/>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="caixadetexto">
    <div asp-validation-summary="All" class="text-danger"></div>

    <span asp-validation-for="Input.UserName" class="text-danger"></span>
    <div class="texto">
        <h5>NOME DE USUÁRIO:</h5>
        <small>Seu nome de usuário não pode conter caracteres especiais e deve haver de 6 a 100 caracteres e caracteres não-alfanuméricos ("_/-")..</small>
        <input asp-for="Input.UserName" placeholder="Digite seu nome de usuário" class="Infos">
    </div>

    <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
    <div class="texto">
        <h5>DATA DE NASCIMENTO:</h5>
        <small>Apenas maiores de 12 anos podem acessar a plataforma.</small>
        <input asp-for="Input.DataNascimento" placeholder="Digite sua data de nascimento" class="Infos">
    </div>

    <span asp-validation-for="Input.Email" class="text-danger"></span>
    <div class="texto">
        <h5>E-MAIL:</h5>
        <input asp-for="Input.Email" placeholder="Digite seu e-mail" class="Infos">
    </div>

    <div class="texto">
        <h5>CPF:</h5>
        <input asp-for="Input.CPF" placeholder="Digite seu CPF" class="cpf-cnpj cpf">
    </div>

    <div class="texto">
        <h5>CEP:</h5>
        <input asp-for="Input.CEP" placeholder="digite seu CEP" class="Infos cep">
    </div>

    <span asp-validation-for="Input.Password" class="text-danger"></span>
    <div class="texto">
        <h5>SENHA:</h5>
        <small>Sua senha deve possuir de 5 a 100 caracteres e conter nenhum caracter especial</small>
        <input asp-for="Input.Password" placeholder="Digite sua senha, ela deve possuir de 5 a 100 caracteres e nenhum caracter especial" class="Infos">
    </div>

    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    <div class="texto">
        <h5>CONFIRMAR SENHA:</h5>
        <input asp-for="Input.ConfirmPassword" placeholder="Confirme sua senha" class="Infos">
    </div>

    <button type="submit" class="botao">CRIAR CONTA</button>
    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="color: white; margin-top: 10px;">Entrar em conta existente</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/jquery.mask.js"></script>
    <script src="~/js/site.js"></script>
}
