@{
    Layout = null;
}
@model UserAntigo
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel="stylesheet" href="~/css/login.css">
    </head>

    <body>
        <div class="corpo">
            <div class="container">
                <h3 class="titulo">Entrar na conta</h3>
                @if(ViewBag.Erro is not null)
                {
                    <span class="text-danger">@ViewBag.Erro</span>
                }
                <form class="container" asp-action="Index">

                    <span class="text-danger" asp-validation-for="Nome"></span>
                    <label class="label" asp-for="Nome"></label>
                    <input asp-for="Nome" class="input_login" placeholder="Nome..."/>

                    <span class="text-danger" asp-validation-for="Senha"></span>
                    <label class="label" asp-for="Senha"></label>
                    <input asp-for="Senha" type="password" class="input_login"/>
                    
                    <div class="container">
                        <button class="botao" type="submit">Entrar!</button>
                        <a asp-action="Cadastro" class="botao botao-segundario">Não tem conta? Crie!</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>