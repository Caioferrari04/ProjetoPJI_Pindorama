@model List<Game>

<link href="~/css/Comunidade.css" rel="stylesheet" />

<div class="absolutamente-tudo">
    <h1>Comunidades</h1>
    <div class="cartoes">
    @if(Model.Count() > 0){
        @foreach(Game game in Model){
            <a asp-action="GameForum" asp-route-id="@game.Id" class="cartao-jogo" style="background: url(@game.LinkLogo)">
                <div class="blur">
                    <p>@game.Nome</p>
                </div>
            </a>
        }
    } 
    else {
        <div>
            <h2>Você não possui jogos!</h2>
            <br/>
            <p>Você não pode participar de uma comunidade até comprar um jogo!</p>
        </div>
    }
    </div>
</div>